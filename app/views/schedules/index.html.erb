<p id="notice"><%= notice %></p>

<h1>Appointment List</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Dob</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Urgency</th>
      <th>Time</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.first_name %></td>
        <td><%= schedule.last_name %></td>
        <td><%= schedule.age %></td>
        <td><%= schedule.dob %></td>
        <td><%= schedule.city %></td>
        <td><%= schedule.state %></td>
        <td><%= schedule.zipcode %></td>
        <td><%= schedule.urgency %></td>
        <td><%= schedule.time %></td>
        <td><%= schedule.note %></td>
        <td><%= link_to 'Edit Appointment', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Delete Appointment', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Create new appointment
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New Appointment</h4>
      </div>
      <div class="modal-body">
        <%= render 'form' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close Form</button>
      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>

